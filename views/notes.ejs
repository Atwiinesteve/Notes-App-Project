<%- include('partials/header');  %>

<%- include('partials/navbar');  %>

<!--  
    - All/main posts
-->

<div class="notes__container">

    <div class="notes">
        
        <% if(notes) { %>
            <% notes.forEach(note => { %>
                <div class="note">
                    <div class="note__title">
                        <%= note.title %>
                    </div>
                    <div class="note__content">
                        <%= note.content %>
                    </div>
                    <div class="note__author">
                        <%= note.author %>
                    </div>
                    <div class="note__footer">
                        <div class="operations">
                            <span>
                                <a href="/delete-note/<%= note._id%>"> <i class="fa fa-trash-o"></i> </a>
                            </span>
                            <span>
                                <a href="/read/<%= note._id%>"> <i class="fa fa-file-text-o"></i> </a>
                            </span>
                            <span>
                                <a href="/share/<%= note._id%>"> <i class="fa fa-share-alt"></i> </a>
                            </span>
                            <span>
                                <a href="/update-note/<%= note._id%>"> <i class="material-icons">mode_edit</i> </a>
                            </span>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>no notes available</p>
        <% } %>


        <a href="/create-note" class="create__post__area">
            <p>Click here to add your note..</p>
        </a>


        

    </div>

</div>
  

<%- include('partials/footer');  %>